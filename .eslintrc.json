{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "process": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"   // ðŸ‘ˆ auto-detects from your installed React
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "react/prop-types": "off",
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "react/react-in-jsx-scope": "off",
    "semi": ["error", "always"]

  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.test.jsx"],
      "env": { "jest": true }
    }
  ]
}